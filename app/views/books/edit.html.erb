<div class="bg bg-warning mt-5 col-8 p-5">
    <h1> Super Mega formulario para editar </h1>
    <%= form_with model: @book do |f| %>
        <div class="row mt-3">
            <div class="col-4">
                <%= f.text_field :title, placeholder: "ingresa titulo" %>
            </div>

            <div class="col-4">
                <%= f.text_field :author, placeholder: "author"%>
            </div>
        </div>

        <div class="mt-3">
            <%= f.label :Estado %>   
            <%= f.select :status, Book.statuses.keys %>
        </div>

        <div class="row">
            <div class="col-4 mt-3">
                <%= f.label :Fecha_prestamo %> 
                <%= f.date_field :borrow_date %>
            </div>

            <div class="col-4 mt-3">
                <%= f.label :Fecha_retorno %> 
                <%= f.date_field :return_date %>
            </div>
        </div>

        <div class="mt-3" >
            <%= f.text_field :friend, placeholder: "ingresa amigo" %>
        </div>

        <div class="mt-3">
            <%= f.submit "guardar", class: "btn btn-success" %>
        </div>
    <% end %>
</div>